<Window x:Class="CommunalController.Graph.GetGraph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunalController.Graph"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="GetGraph" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ScottPlot:WpfPlot Grid.Row="0" Grid.ColumnSpan="2" x:Name="Graph" Visibility="Hidden"/>

        <TextBox Grid.Row="1" Grid.Column="0" x:Name="Date"/>

        <Button Grid.Row="2" Grid.Column="2" Content="Показать график" Click="BuildGraph" Style="{StaticResource btnStyle}"/>

    </Grid>
</Window>
